<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/mostrar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_weight="0.03"
        android:text="nombre"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/mostrar_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="67dp"
        android:layout_toEndOf="@+id/mostrar_nombre"
        android:layout_weight="0.03"
        android:text="telefono"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/spark_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="260dp"
        app:sparkbutton_activeImage="@drawable/ic_eliminar"
        app:sparkbutton_animationSpeed="0.5"
        app:sparkbutton_iconSize="40dp"
        app:sparkbutton_primaryColor="@android:color/holo_blue_bright"
        app:sparkbutton_secondaryColor="@color/colorAccent"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>
