<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_weight="0.03"
        android:text="Cliente:"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RelativeOverlap"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/c_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RelativeOverlap"
        tools:text="nombre"
        android:layout_alignBaseline="@+id/list_txt"
        android:layout_alignBottom="@+id/list_txt"
        android:layout_toEndOf="@+id/list_txt"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Venta:"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/list_txt"
        android:layout_alignStart="@+id/list_txt"
        android:layout_toStartOf="@+id/c_nombre" />

    <TextView
        android:id="@+id/c_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripcion"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/c_nombre" />


    <TextView
        android:id="@+id/_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_calendar"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/c_total"
        android:layout_centerHorizontal="true"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/c_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        tools:ignore="HardcodedText"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/c_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total"
        android:textColor="@android:color/holo_red_light"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/_total"
        android:layout_alignBottom="@+id/_total"
        android:layout_alignStart="@+id/c_descripcion" />



</RelativeLayout>