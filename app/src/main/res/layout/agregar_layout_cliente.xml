<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Agregar Cliente"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText"
        android:id="@+id/textView4" />

    <EditText
        android:id="@+id/add_nombre"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_txt"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="@android:color/holo_red_light"
        android:textCursorDrawable="@android:color/holo_red_light"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <EditText
        android:id="@+id/add_telefono"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/add_nombre"
        android:layout_below="@+id/add_nombre"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_txt"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
        android:hint="TelÃ©fono"
        android:inputType="text|phone"
        android:paddingLeft="30dp"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textColorHighlight="@android:color/holo_red_light"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="@android:color/holo_red_light"
        android:textSize="18sp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/add_telefono"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/btnCancelar"
        android:background="@drawable/edit_btn"
        android:backgroundTint="@color/colorAccent"
        android:text="Guardar"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/edit_btn"
        android:backgroundTint="?android:attr/colorControlNormal"
        android:text="cancelar"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textColorLink="@android:color/holo_red_light"
        tools:ignore="HardcodedText"
        android:layout_alignStart="@+id/add_nombre"
        android:layout_alignTop="@+id/btnAceptar" />

</RelativeLayout>